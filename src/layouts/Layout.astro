---
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";
import "@fontsource/acme";
export interface Props {
	title: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const socialImageURL = new URL("/images/logo.png", Astro.site);

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<link rel="sitemap" href="/sitemap-index.xml" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta property="og:url" content={canonicalURL} />
		<meta property="og:type" content="website" />
		<meta property="og:title" content={title} />
		<meta property="og:image" content={socialImageURL} />
		<meta property="og:image:alt" content="NightPDFs logo" />
		<meta
			property="og:description"
			content="NightPDF the PDF reader you didn't know you needed"
		/>
		<meta property="og:site_name" content="NightPDF" />
		<meta property="og:locale" content="en_US" />
		<meta property="article:author" content="Lunarequest" />
		<meta
			name="description"
			content="NightPDF the PDF reader you didn't know you needed"
		/>
		<meta name="robots" content="index,follow" /><!-- All Search Engines -->
		<meta name="googlebot" content="index,follow" /><!-- Google Specific -->
		<link
			rel="alternate"
			type="application/rss+xml"
			href="/index.xml"
			title="Nightpdf"
		/>
	</head>
	<body class="text-white bg-gray-800">
		<Nav />
		<slot />
		<Footer />
	</body>
</html>
<style is:global>
	body {
		font-family: acme, sans-serif;
	}
	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
			DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
	}
</style>
